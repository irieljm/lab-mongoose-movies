<h2>Edit a Movie</h2>
{{#with movie}}
<form action="/movies/{{_id}}" method="POST">
  <label for="title">Title: </label> 
  <input id="title" type="text" name="title" value="{{title}}">
  
  <label for="genre">Genre: </label> 
  <input id="genre" type="text" name="genre" value="{{genre}}">
  
  <label for="plot">Plot: </label> 
  <input id="plot" type="text" name="plot" value="{{plot}}">
{{/with}}
  
  <select name="cast" id="cast" multiple>
    {{#each celebrities}}
      <option value="{{_id}}">{{name}}</option>
      {{/each}}
  </select>

  <button type="submit">Update the Movie</button>
</form>

